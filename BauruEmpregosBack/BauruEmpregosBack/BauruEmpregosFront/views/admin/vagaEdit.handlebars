<div class="container">
    <form class="mt-5" action="/admin/editar-vaga/edit" method="POST">

        <input type="hidden" name="id" value="{{response.data.id}}">

        <div class="form-row">

            <div class="form-group col-md-3">
                <label for="titulo1">Titulo</label>
                <input type="text" class="form-control" id="titulo1" name="titulo" value="{{response.data.title}}"
                    required>
            </div>

            <div class="form-group col-md-3">
                <label for="empresa1">Empresa</label>
                <input type="text" class="form-control" id="empresa1" name="empresa" value="{{response.data.company}}"
                    required>
            </div>

            <div class="form-group col-md-3">
                <label for="cidade1">Cidade</label>
                <input type="text" class="form-control" id="cidade1" name="cidade" value="{{response.data.city}}"
                    required>
            </div>

            <div class="form-group col-md-3">
                <label class="my-1 mr-2" for="status1">Status da vaga</label>
                <select class="custom-select" id="status1" name="status">
                    <option value="1">Vaga em Aberto</option>
                    <option value="2">Fechada</option>
                </select>
            </div>

        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="email1">Email</label>
                <input type="email" class="form-control" id="email1" name="email" value="{{response.data.email}}"
                    required>
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword41">Telefône</label>
                <input type="text" class="form-control" id="telefone1" name="telefone" value="{{response.data.phone}}"
                    required>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="informacoes1">Informações da vaga</label>
                <textarea class="form-control" cols="30" rows="5" id="informacoes1" name="informacoes" required>
                    {{response.data.informationVacancy}}
                </textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Editar</button>

    </form>
</div>