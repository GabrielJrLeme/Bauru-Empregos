<div class="container">
    <form class="mt-5" action="/admin/nova-vaga/add" method="POST">

        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="titulo1">Titulo</label>
                <input type="text" class="form-control" id="titulo1" name="titulo" required>
            </div>

            <div class="form-group col-md-3">
                <label for="empresa1">Empresa</label>
                <input type="text" class="form-control" id="empresa1" name="empresa" required>
            </div>

            <div class="form-group col-md-3">
                <label for="cidade1">Cidade</label>
                <input type="text" class="form-control" id="cidade1" name="cidade" required>
            </div>

        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="email1">Email</label>
                <input type="email" class="form-control" id="email1" name="email" required>
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword41">Telefône</label>
                <input type="text" class="form-control" id="telefone1" name="telefone" required>
            </div>
        </div>        

        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="informacoes1">Informações da vaga</label>
                <textarea class="form-control" cols="30" rows="5" id="informacoes1" name="informacoes" required></textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Criar</button>

    </form>
</div>